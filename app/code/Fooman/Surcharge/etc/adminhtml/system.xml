<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="sales" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <group id="totals_sort" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="0">
                <field id="fooman_surcharge" translate="label" type="text" sortOrder="6" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Surcharge</label>
                </field>
                <field id="fooman_surcharge_tax" translate="label" type="text" sortOrder="6" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Surcharge Tax</label>
                </field>
            </group>
        </section>
        <section id="tax">
            <group id="cart_display">
                <field id="fooman_surcharge" translate="label" type="select" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Surcharge Amount</label>
                    <source_model>Magento\Tax\Model\System\Config\Source\Tax\Display\Type</source_model>
                </field>
                <field id="fooman_surcharge_zero" translate="label" type="select" sortOrder="122" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Zero Surcharge</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="sales_display">
                <field id="fooman_surcharge" translate="label" type="select" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Surcharge Amount</label>
                    <source_model>Magento\Tax\Model\System\Config\Source\Tax\Display\Type</source_model>
                </field>
                <field id="fooman_surcharge_zero" translate="label" type="select" sortOrder="122" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Zero Surcharge</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
