<div class="dashboard-item-content">
    <?php if (count($block->getCollection())): ?>
        <table class="admin__table-primary dashboard-data" id="sales_by_location_table">
            <tbody>
            <?php foreach ($block->getCollection() as $item): ?>
                <tr title="">
                    <td class=""><?php echo $item['country'] ?></td>
                    <td class=""><?php echo $item['count'] ?></td>
                    <?php if ($block->isCompare()) : ?>
                        <td class="<?php echo $item['rate'] > 0 ? 'up-rate' : ($item['rate'] < 0 ? 'down-rate' : '') ?>"><?php echo abs($item['rate']) . '%' ?></td>
                    <?php endif; ?>
                </tr>
            <?php endforeach; ?>
            </tbody>
        </table>
    <?php else : ?>
        <div class="empty-text"><?php echo __('We couldn\'t find any records.') ?></div>
    <?php endif; ?>
</div>
