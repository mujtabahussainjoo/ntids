<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
	    <tab id="handoversso" sortOrder="200" translate="label">
			<label>Handover SSO</label>
		</tab>
		<section id="handoversso_global" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Global Settings</label>
            <tab>handoversso</tab>
            <resource>Serole_Handoversso::config</resource>
            <group id="general_global" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
				<field id="hsso_yesno" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
        <section id="handoversso_smallideas" translate="label" sortOrder="101" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Small Ideas Settings</label>
            <tab>handoversso</tab>
            <resource>Serole_Handoversso::config</resource>
            <group id="general_smallideas" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
				<field id="smallideas_privatekey" translate="label" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Private Key</label>
                </field>
            </group>
        </section>
		<section id="handoversso_flybuys" translate="label" sortOrder="102" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Flybuys Settings</label>
            <tab>handoversso</tab>
            <resource>Serole_Handoversso::config</resource>
            <group id="general_flybuys" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
				<field id="flybuys_privatekey" translate="label" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Private Key</label>
                </field>
            </group>
        </section>
		<section id="handoversso_westpac" translate="label" sortOrder="103" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Westpac Settings</label>
            <tab>handoversso</tab>
            <resource>Serole_Handoversso::config</resource>
            <group id="general_westpac" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
				<field id="westpac_affiliateid" translate="label" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Affiliate Id</label>
                </field>
				<field id="westpac_privatekey" translate="label" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Private Key</label>
                </field>
				<field id="westpac_hashexpiry" translate="label" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Expiry(in Second)</label>
                </field>
            </group>
        </section>
		<section id="handoversso_alinta" translate="label" sortOrder="103" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Alinta Settings</label>
            <tab>handoversso</tab>
            <resource>Serole_Handoversso::config</resource>
            <group id="general_alinta" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
				<field id="ip_addresses" translate="label" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Allowed IP Address</label>
                </field>
				<field id="email_required" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is Email required</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="firstname_required" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is FirstName Required</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="lastname_required" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is LastName Required</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="ssoid_required" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Is SSOID Required</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="timeout" translate="label" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Timeout</label>
                </field>
            </group>
        </section>
    </system>
</config>